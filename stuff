    <script>
        // Data for the Chart (FY24 Revenue in Billions)
        const revenueData = {
            labels: ['BAH', 'SAIC', 'Leidos', 'CACI'],
            datasets: [{
                label: 'FY24 Revenue (Billion $)',
                data: [10.7, 7.38, 15.44, 6.8],
                backgroundColor: [
                    'var(--color-primary)', // BAH Blue
                    '#4da6ff', // SAIC Light Blue
                    '#facc15', // Leidos Yellow
                    '#9333ea'  // CACI Purple
                ],
                borderColor: 'transparent',
                borderWidth: 1
            }]
        };

        // Configuration options
        const config = {
            type: 'bar',
            data: revenueData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false,
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0,0,0,0.8)',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        callbacks: {
                            label: function(context) {
                                return `$${context.parsed.y} Billion`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Revenue (Billions $)',
                            color: '#94a3b8', // slate-400
                            font: {
                                size: 12
                            }
                        },
                        ticks: {
                            color: '#cbd5e1', // slate-300
                            callback: function(value) {
                                return '$' + value + 'B';
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.05)'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#cbd5e1', // slate-300
                            font: {
                                weight: '500'
                            }
                        },
                        grid: {
                            display: false
                        }
                    }
                }
            }
        };

        // Render the chart
        const revenueChart = new Chart(
            document.getElementById('revenueChart'),
            config
        );
    </script>

