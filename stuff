    <script>
        // Data for the Chart (FY24 Revenue in Billions)
        const revenueData = {
            labels: ['BAH', 'SAIC', 'Leidos', 'CACI'],
            datasets: [{
                label: 'FY24 Revenue (Billion $)',
                data: [10.7, 7.38, 15.44, 6.8],
                backgroundColor: [
                    'var(--color-primary)', // BAH Blue
                    '#4da6ff', // SAIC Light Blue
                    '#facc15', // Leidos Yellow
                    '#9333ea'  // CACI Purple
                ],
                borderColor: 'transparent',
                borderWidth: 1
            }]
        };

        // Configuration options
        const config = {
            type: 'bar',
            data: revenueData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false,
                    },
                    title: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Revenue (Billions $)',
                            color: 'var(--color-text)'
                        },
                        ticks: {
                            color: 'var(--color-text)'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    },
                    x: {
                        ticks: {
                            color: 'var(--color-text)'
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    }
                }
            }
        };

        // Render the chart
        const revenueChart = new Chart(
            document.getElementById('revenueChart'),
            config
        );
    </script>

